<% include ../partials/header %>
<div class="container">
  <div class="row">
        <h1>Edit comment</h1>

            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
              <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="hidden" name="comment[date]" value="<%= Date.now() %>">
              </div>
              <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Submit!</button>
              </div>
              <a href="/campgrounds">Go back!</a>
            </form>



  </div>
</div>
<% include ../partials/footer %>
