<% include partials/header %>





 <div class="container-fluid">

        <header class="jumbotron">

          <h1>Welcome to CampJS</h1>
          <p>view our hand picked campground from all over the world</p>
          <p>
          <a class="btn btn-info"href="/campgrounds/new">Add New campground</a>
          </p>
        </header>

  <div class="row">
    <div class="col-md-12">
      <h3>favorite camps</h3>
    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img class="img-thumbnail" src="<%= campground.image %>" alt="">
          <div class="caption">
            <h4><%= campground.name %></h4>
          </div>
          <p>
               <a href="/campgrounds/<%= campground._id %>"class="btn btn-info btn-xs">More info</a>
          </p>
        </div>
      </div>
<% }) %>
  </div>
 </div>
<% include partials/footer %>
